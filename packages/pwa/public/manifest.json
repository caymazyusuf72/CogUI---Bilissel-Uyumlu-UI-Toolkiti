  "categories": [
    "productivity",
    "utilities",
    "developer"
  ],
  
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Open CogUI Dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Design System",
      "short_name": "Design",
      "description": "Open Design System",
      "url": "/design-system",
      "icons": [
        {
          "src": "/icons/shortcut-design.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Accessibility Tools",
      "short_name": "A11y",
      "description": "Open Accessibility Tools",
      "url": "/accessibility",
      "icons": [
        {
          "src": "/icons/shortcut-a11y.png",
          "sizes": "192x192"
        }
      ]
    },
    {
      "name": "Settings",
      "short_name": "Settings",
      "description": "Open Application Settings",
      "url": "/settings",
      "icons": [
        {
          "src": "/icons/shortcut-settings.png",
          "sizes": "192x192"
        }
      ]
    }
  ],
  
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://cogui.dev/manifest.json"
    }
  ],
  
  "prefer_related_applications": false,
  
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "files",
          "accept": ["image/*", "text/*", ".json", ".css", ".js", ".ts", ".tsx"]
        }
      ]
    }
  },
  
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/json": [".json"],
        "text/css": [".css"],
        "text/javascript": [".js"],
        "application/typescript": [".ts", ".tsx"],
        "text/plain": [".txt", ".md"]
      }
    }
  ],
  
  "protocol_handlers": [
    {
      "protocol": "web+cogui",
      "url": "/handle/%s"
    }
  ],
  
  "edge_side_panel": {
    "preferred_width": 400
  },
  
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  
  "handle_links": "preferred",
  
  "scope_extensions": [
    {
      "origin": "https://cogui.dev"
    },
    {
      "origin": "https://api.cogui.dev"
    }
  ],
  
  "display_override": [
    "window-controls-overlay",
    "minimal-ui",
    "standalone",
    "browser"
  ],
  
  "iarc_rating_id": "e84b072d-71b3-4d3e-86ae-31a8ce4e53b7"
}