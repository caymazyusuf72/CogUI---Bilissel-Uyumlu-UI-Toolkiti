{
  "name": "@cogui/cloud-deployment",
  "version": "1.0.0",
  "description": "Cloud deployment infrastructure and monitoring for CogUI cognitive-adaptive UI framework",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "docker:build": "docker build -t cogui/monitoring .",
    "docker:run": "docker run -p 3000:3000 cogui/monitoring",
    "k8s:deploy": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "monitoring:up": "docker-compose -f docker-compose.yml up -d",
    "monitoring:down": "docker-compose -f docker-compose.yml down",
    "monitoring:logs": "docker-compose -f docker-compose.yml logs -f",
    "performance:test": "k6 run tests/performance.js",
    "security:scan": "npm audit && docker run --rm -v $(pwd):/app securecodewarrior/docker-image-validator /app",
    "accessibility:test": "axe-core tests/accessibility.js",
    "backup:database": "node scripts/backup-database.js",
    "restore:database": "node scripts/restore-database.js",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "clean": "rm -rf dist coverage logs"
  },
  "keywords": [
    "cogui",
    "cloud",
    "deployment",
    "monitoring",
    "kubernetes",
    "docker",
    "prometheus",
    "grafana",
    "elasticsearch",
    "accessibility",
    "cognitive-ui",
    "infrastructure",
    "devops",
    "observability",
    "microservices"
  ],
  "author": "CogUI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/cogui/cogui.git",
    "directory": "packages/cloud-deployment"
  },
  "bugs": {
    "url": "https://github.com/cogui/cogui/issues"
  },
  "homepage": "https://cogui.dev",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "prom-client": "^15.1.0",
    "winston": "^3.11.0",
    "winston-elasticsearch": "^0.17.4",
    "jaeger-client": "^3.19.0",
    "node-cron": "^3.0.3",
    "axios": "^1.6.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.3.1",
    "ioredis": "^5.3.2",
    "mongodb": "^6.3.0",
    "nodemailer": "^6.9.7",
    "sharp": "^0.33.0",
    "multer": "^1.4.5",
    "swagger-ui-express": "^5.0.0",
    "express-openapi-validator": "^5.1.4",
    "elastic-apm-node": "^4.0.0",
    "opentelemetry-js": "^1.0.0",
    "@opentelemetry/api": "^1.7.0",
    "@opentelemetry/sdk-node": "^0.45.0",
    "@opentelemetry/exporter-prometheus": "^0.45.0",
    "@opentelemetry/exporter-jaeger": "^1.18.0",
    "k6": "^0.47.0",
    "puppeteer": "^21.5.0",
    "axe-core": "^4.8.2",
    "pa11y": "^8.0.0",
    "lighthouse": "^11.4.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/nodemailer": "^6.4.14",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.2",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.54.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "prettier": "^3.1.0",
    "@types/node-cron": "^3.0.11",
    "concurrently": "^8.2.2"
  },
  "peerDependencies": {
    "@cogui/core": "^1.0.0",
    "@cogui/sensors": "^1.0.0"
  },
  "files": [
    "dist",
    "k8s",
    "Dockerfile",
    "docker-compose.yml",
    ".github",
    "README.md",
    "CHANGELOG.md"
  ],
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/index.ts"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.ts"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@typescript-eslint/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "@typescript-eslint/explicit-function-return-type": "warn",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "prefer-const": "error",
      "no-var": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "config": {
    "monitoring": {
      "prometheus": {
        "port": 9090,
        "scrapeInterval": "15s"
      },
      "grafana": {
        "port": 3000,
        "adminUser": "admin",
        "adminPassword": "admin"
      },
      "elasticsearch": {
        "port": 9200,
        "cluster": "cogui-logs"
      },
      "jaeger": {
        "port": 16686,
        "agentPort": 6832
      },
      "redis": {
        "port": 6379
      },
      "mongodb": {
        "port": 27017,
        "database": "cogui"
      }
    },
    "deployment": {
      "environment": "production",
      "replicas": 3,
      "maxReplicas": 10,
      "targetCPUUtilization": 70,
      "targetMemoryUtilization": 80,
      "livenessProbe": "/health",
      "readinessProbe": "/ready",
      "resources": {
        "requests": {
          "cpu": "100m",
          "memory": "128Mi"
        },
        "limits": {
          "cpu": "500m",
          "memory": "512Mi"
        }
      }
    },
    "security": {
      "rbac": true,
      "networkPolicies": true,
      "podSecurityPolicy": true,
      "serviceAccount": "cogui-monitoring",
      "secretStore": "kubernetes"
    },
    "accessibility": {
      "testSuite": "axe-core",
      "wcagLevel": "AA",
      "testSchedule": "*/5 * * * *",
      "alertThreshold": 85
    },
    "performance": {
      "testTool": "k6",
      "testSchedule": "*/15 * * * *",
      "thresholds": {
        "avgResponseTime": 2000,
        "p95ResponseTime": 5000,
        "errorRate": 0.02,
        "throughput": 100
      }
    }
  },
  "volta": {
    "node": "18.19.0",
    "npm": "10.2.3"
  }
}